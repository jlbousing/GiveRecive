        <div class="container">
            <h3 style="color: white;">Buscar productos por nombre</h3>
            <form method="post" action="/buscar">
                <div class="row">
                    <div class="col-xs-12 col-md-12 col-lg-12">
                        <input type="text" id="inputText" placeholder="Nombre del producto" name="NombreProducto">
                    </div>
                </div>
                </br>
                <div class="row">
                    <div class="col-xs-12 col-md-12 col-lg-12">
                        <input type="text" id="inputText" placeholder="Ciudad" name="Ciudad">
                    </div>
                </div>
                </br>
                <div class="row">
                    <div class="col-xs-12 col-md-12 col-lg-12">
                        <input type="submit" class="btn btn-default" style="margin-top:100px;">
                    </div>
                </div>
            </form>
        </div>

        <div id="repository">
        {#donacion}
           <div class="well">
             <h4>{nombre} <button class="btn btn-default pull-right"  data-toggle="collapse" href="#donacion_{id}" aria-expanded="false" aria-controls="donacion_{id}"><span class="glyphicon glyphicon-triangle-bottom" aria-hidden="true"></span></button>
             </h4>
             <div class="collapse" id="donacion_{id}">
                 </br>
                 </br>
                 <p><strong>Nombre: </strong>{nombre}</p>
                 <p><strong>Descripcion: </strong>{descripcion}</p>
                 <p><strong>Ciudad: </strong>{ubicacion}</p>
                 </br>
                 <button class="btn btn-danger">Recibir</button>
              </div>
         </div>
        {/donacion}
