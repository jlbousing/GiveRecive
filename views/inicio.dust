<html>
    <head>
        <title>GiveRecive</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="stylesheet" type="text/css" href="../css/bootstrap.css">
        <link rel="stylesheet" type="text/css" href="../css/style.css">
        <link rel="stylesheet" type="text/css" href="../css/field.css">
        <script src="../js/jquery.min.js"></script>
        <script src="../js/bootstrap.min.js"></script>
    </head>
    <body>
            
        <div id="container">
            
            <button data-toggle="collapse" data-target="#login" class="btn btn-primary btn-block">Ingresar
            </button>
            
            <div id="login" class="collapse">
                <div class="container">
                    <form method="post" action="/log">
                        <div class="row">
                            <div class="col-xs-12">
                                <h5>Nombre de usuario</h5>
                                <input type="text" name="username" id="campo">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <h5>Contraseña</h5>
                                <input type="password" name="password" id="campo">
                            </div>
                        </div>
                        </br>
                        <div class="row">
                            <div class="col-xs-12">
                                <input type="submit" value="Ingresar" class="btn btn-default">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            <br/>
            <br/>
            <!-- BOTÓN PARA REGISTRARSE -->
            <button data-toggle="collapse" data-target="#SignIn" class="btn btn-primary btn-block">Registrarse
            </button>
            
            <div id="SignIn" class="collapse">
                <div class="container">
                    <form method="post" action="/signin" onsubmit="return ValidarFormulario()" name="FormSignin">
                        <div class="row">
                            <div class="col-xs-12">
                                <h5>Escriba su nombre de usuario</h5>
                                <input type="text" name="username" id="campo">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <h5>Escriba su correo electrónico</h5>
                                <input type="text" name="email" id="campo">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <h5>Escriba su contraseña</h5>
                                <input type="password" name="password" id="campo">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <h5>Vuelva a escribir su contraseña</h5>
                                <input type="password" name="password2" id="campo">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <h5>Escriba su primer nombre</h5>
                                <input type="text" name="nombreprimero" id="campo">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <h5>Escriba su segundo nombre</h5>
                                <input type="text" name="nombresegundo" id="campo">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <h5>Escriba su primer apellido</h5>
                                <input type="text" name="apellidoprimero" id="campo"> 
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <h5>Escriba su segundo apellido</h5>
                                <input type="text" name="apellidosegundo" id="campo">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <h5>Seleccione su sexo </h5>
                                <select name="sexocod">
                                    <option>M</option>
                                    <option>F</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <h5>Escriba su fecha de nacimiento</h5>
                                <input type="text" name="fechanacimiento" id="campo" class="campoFecha" placeholder="DD/MM/YYYY">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <h5>Escriba el codigo de área de su número telefónico</h5>
                                <input type="text" name="codigoarea" id="campo">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <h5>Escriba su número telefónico</h5>
                                <input type="text" name="telefono" id="campo">
                            </div>
                        </div>
                        </br>
                        <div class="row">
                            <div class="col-xs-12">
                                <input type="submit" value="Registrarse" class="btn btn-default">
                                 </br>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
        </div>
        
    </body>
</html>